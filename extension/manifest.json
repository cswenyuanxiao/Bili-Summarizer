{
    "manifest_version": 3,
    "name": "Bili-Summarizer Helper",
    "version": "1.1.0",
    "description": "一键点击或在 B 站视频页快捷开启 AI 总结",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "*://www.bilibili.com/video/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.bilibili.com/video/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_icon": {
            "128": "icons/icon128.png"
        },
        "default_title": "点击总结当前视频"
    },
    "icons": {
        "128": "icons/icon128.png"
    }
}